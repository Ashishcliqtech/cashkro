#Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

#Database
MONGODB_URI=mongodb://localhost:27017/cashback_platform
MONGODB_URI_TEST=mongodb://localhost:27017/cashback_platform_test

#JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

#Email Configuration (SMTP)
EMAIL_FROM=noreply@cashbackplatform.com
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password

#Redis Configuration
REDIS_URL=redis://localhost:6379

#File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png

#Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

#Admin Configuration
ADMIN_EMAIL=admin@cashbackplatform.com
ADMIN_PASSWORD=AdminPassword123!

#Razorpay Payout Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_ACCOUNT_NUMBER=your_razorpayX_account_number

#Cashback Configuration
MIN_WITHDRAWAL_AMOUNT=10
CASHBACK_COMMISSION_RATE=0.05
DEFAULT_CASHBACK_PERCENTAGE=5

#Callback Security
CALLBACK_API_KEY=a_very_secret_key_for_callbacks